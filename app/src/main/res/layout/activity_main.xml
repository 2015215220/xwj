<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b889b"
    tools:context="bysj.xwj.MainActivity">
    <ImageButton
        android:id="@+id/car"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/car" />


    <ImageButton
        android:id="@+id/unlock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/scan"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/unlock" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="@string/login_main_name" />

    <ImageButton
        android:id="@+id/scan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/car"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_toLeftOf="@+id/car"
        android:layout_toStartOf="@+id/car"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/scan" />

</RelativeLayout>
